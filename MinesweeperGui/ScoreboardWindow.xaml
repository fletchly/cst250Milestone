<Window x:Class="MinesweeperGui.ScoreboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008y:\gcu\cst250\milestone\minseweeper\minesweepergui\scoreboardwindow.xaml
y:\gcu\cst250\milestone\minseweeper\minesweepergui\scoreboardwindow.xaml.cs
"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinesweeperGui"
        mc:Ignorable="d"
        Title="ScoreboardWindow" Height="450" Width="800" Loaded="ScoreBoardWindowLoad">
    <Grid>
        <DataGrid x:Name="DgvScores" HorizontalAlignment="Center" Height="207" Margin="0,40,0,0" VerticalAlignment="Top" Width="780" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Menu HorizontalAlignment="Center" Height="25" Margin="0,10,0,0" VerticalAlignment="Top" Width="780">
            <MenuItem Header="File">
                <MenuItem x:Name="MniSave" Header="Save" Click="MniSaveClick"/>
                <MenuItem x:Name="MniClose" Header="Load" Click="MniLoadClick"/>
            </MenuItem>
            <MenuItem Header="Sort">
                <MenuItem x:Name="MniAsc" Header="Ascending" Click="MniAscClick"/>
                <MenuItem x:Name="MniDesc" Header="Descending" Click="MniDescClick"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
